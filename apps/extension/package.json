{
  "name": "@glin-extension/extension",
  "version": "0.1.0",
  "private": true,
  "description": "GLIN Wallet Browser Extension",
  "scripts": {
    "dev": "vite build --watch --mode development && pnpm copy:assets",
    "build": "NODE_ENV=production vite build --mode production && pnpm copy:assets",
    "copy:assets": "cp manifest.json dist/ && mkdir -p dist/public && cp -r public/* dist/public/ 2>/dev/null || true",
    "preview": "vite preview",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@glin-extension/extension-base": "workspace:*",
    "@glin-extension/extension-inject": "workspace:*",
    "@glin-extension/extension-ui": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/styled-components": "^5.1.0",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0",
    "typescript": "^5.3.0"
  }
}
